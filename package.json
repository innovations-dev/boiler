{
  "name": "boiler",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:generate": "drizzle-kit generate --config=./config/drizzle/drizzle-dev.config.ts",
    "db:prod:generate": "drizzle-kit generate --config=./config/drizzle/drizzle-prod.config.ts",
    "db:migrate": "drizzle-kit migrate --config=./config/drizzle/drizzle-dev.config.ts",
    "db:prod:migrate": "drizzle-kit migrate --config=./config/drizzle/drizzle-prod.config.ts",
    "db:drop-migration": "drizzle-kit drop --config=./config/drizzle/drizzle-dev.config.ts",
    "db:prod:drop-migration": "drizzle-kit drop --config=./config/drizzle/drizzle-prod.config.ts",
    "db:studio": "drizzle-kit studio --config=./config/drizzle/drizzle-dev.config.ts",
    "db:prod:studio": "drizzle-kit studio --config=./config/drizzle/drizzle-prod.config.ts",
    "auth:generate": "npx @better-auth/cli@latest generate",
    "auth:migrate": "npx @better-auth/cli@latest migrate",
    "mail:dev": "email dev --port 3001",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "dependencies": {
