    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^1.3.1",
    "@vitest/ui": "^1.3.1",
    "drizzle-kit": "^0.30.4",
    "eslint": "^9",
    "eslint-config-next": "15.1.7",
    "eslint-config-prettier": "^9.1.0",
    "globby": "^14.1.0",
    "jsdom": "^24.1.3",
    "postcss": "^8",
    "prettier": "3.4.2",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "react-email": "3.0.7",
