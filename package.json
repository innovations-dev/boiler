    "drizzle-orm": "^0.39.3",
    "lucide-react": "^0.475.0",
    "nanoid": "^5.1.2",
    "next": "15.1.7",
    "next-themes": "^0.4.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "remark-gfm": "^4.0.1",
    "resend": "^4.1.2",
    "sonner": "^2.0.1",
    "sugar-high": "^0.9.2",
    "tailwind-merge": "^3.0.2",
