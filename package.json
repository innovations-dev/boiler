    "@radix-ui/react-tabs": "^1.1.3",
    "@react-email/components": "^0.0.33",
    "@react-email/render": "^1.0.5",
    "@t3-oss/env-nextjs": "^0.12.0",
    "@tanstack/react-query": "^5.66.9",
    "@tanstack/react-query-devtools": "^5.66.9",
    "better-auth": "^1.1.19",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
